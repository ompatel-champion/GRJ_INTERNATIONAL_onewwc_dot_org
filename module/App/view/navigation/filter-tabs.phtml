$filter = $this->request()->getRequest()->getParam('filter');
?>
<ul class="nav nav-pills pb-2 mb-3 border-bottom no-print">
    <?php
    foreach ($this->menu->pages as $page) {
        if ($page->filter == 'true') {
            if ((!$page->settings || (intval($this->settings[(string)$page->settings['name']]) == $page->settings['value']))) {
                $active = false;
                $params = $page->params;
                if (isset($params['filter'])) {
                    if ($params['filter'] == $filter) {
                        $active = true;
                    }
                }

                ?>
                <li class="nav-item">
                    <a class="nav-link <?php echo ($active) ? 'active' : ''; ?>"
                       href="<?php echo $this->url($page->params, null, true,
                           array('page', 'submit')); ?>"><?php echo $page->label; ?></a>
                </li>
                <?php
            }
        }
    } ?>
</ul>
